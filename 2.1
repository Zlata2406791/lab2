# Определить средний рост девочек и мальчиков одного класса. В классе учится n учеников.
print('Задание 2.1')
def main():
    n = int(input("Введите количество учеников в классе: "))
    girls_height = 0
    boys_height = 0
    girls_count = 0
    boys_count = 0
    for i in range(n):
        sex = input("Введите пол ученика (м - мальчик, ж - девочка): ").strip().lower()
        height = float(input("Введите рост ученика (в сантиметрах): "))
        if sex == 'ж':
            girls_height += height
            girls_count += 1
        elif sex == 'м':
            boys_height += height
            boys_count += 1
        else:
            print("Неверный ввод. Пожалуйста, введите 'м' для мальчика и 'ж' для девочки.")
            continue
    if girls_count > 0:
        average_girls_height = girls_height / girls_count
        print(f"Средний рост девочек: {average_girls_height:.2f} см")
    else:
        print("Нет девочек в классе.")
    if boys_count > 0:
        average_boys_height = boys_height / boys_count
        print(f"Средний рост мальчиков: {average_boys_height:.2f} см")
    else:
        print("Нет мальчиков в классе.")
if __name__ == "__main__":
    main()
